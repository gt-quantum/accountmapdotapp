---
import '@fontsource-variable/inter';

// Account Map App Brand Styles
// Primary: Cartographic Green
// Secondary: Compass Brass/Gold
// Neutrals: Warm Stone (not cool grays)
---

<style is:inline>
  :root {
    /* Typography */
    --aw-font-sans: 'Inter Variable', 'Inter', system-ui, -apple-system, sans-serif;
    --aw-font-serif: 'Inter Variable', 'Inter', system-ui, -apple-system, sans-serif;
    --aw-font-heading: 'Inter Variable', 'Inter', system-ui, -apple-system, sans-serif;

    /* Primary - Cartographic Green */
    --aw-color-primary: #15803D;
    --aw-color-secondary: #16A34A;
    --aw-color-accent: #D4953A;

    /* Text - Warm Stone */
    --aw-color-text-heading: #1C1917;
    --aw-color-text-default: #44403C;
    --aw-color-text-muted: #78716C;

    /* Background - Warm Stone Light */
    --aw-color-bg-page: #FAFAF9;
    --aw-color-bg-page-dark: #1C1917;

    /* Additional brand tokens */
    --aw-color-border: #E7E5E4;
    --aw-color-card: #FFFFFF;
    --aw-color-success: #10B981;
    --aw-color-warning: #C17817;
    --aw-color-error: #EF4444;
    --aw-color-info: #5B9BD5;

    ::selection {
      background-color: #DCFCE7;
      color: #15803D;
    }
  }

  .dark {
    /* Typography */
    --aw-font-sans: 'Inter Variable', 'Inter', system-ui, -apple-system, sans-serif;
    --aw-font-serif: 'Inter Variable', 'Inter', system-ui, -apple-system, sans-serif;
    --aw-font-heading: 'Inter Variable', 'Inter', system-ui, -apple-system, sans-serif;

    /* Primary - Brighter green for dark mode */
    --aw-color-primary: #22C55E;
    --aw-color-secondary: #16A34A;
    --aw-color-accent: #D4953A;

    /* Text - Cool Slate Dark */
    --aw-color-text-heading: #F8FAFC;
    --aw-color-text-default: #F8FAFC;
    --aw-color-text-muted: #94A3B8;

    /* Background - Cool Slate Dark (blue-grey tint) */
    --aw-color-bg-page: #0f172a;

    /* Additional brand tokens */
    --aw-color-border: #334155;
    --aw-color-card: #1e293b;
    --aw-color-success: #10B981;
    --aw-color-warning: #C17817;
    --aw-color-error: #EF4444;
    --aw-color-info: #5B9BD5;

    ::selection {
      background-color: #15803D;
      color: #FAFAF9;
    }
  }
</style>
