---
// Browser Mockup Component
// Wraps an image in a simple browser chrome frame

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  src: ImageMetadata | string;
  alt: string;
  class?: string;
}

const { src, alt, class: className = '' } = Astro.props;
---

<div class={`rounded-lg shadow-warm-xl overflow-hidden bg-stone-800 ${className}`}>
  <!-- Browser Chrome -->
  <div class="flex items-center gap-2 px-4 py-3 bg-stone-900 border-b border-stone-700">
    <!-- Traffic lights -->
    <div class="flex gap-1.5">
      <div class="w-3 h-3 rounded-full bg-red-500"></div>
      <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
      <div class="w-3 h-3 rounded-full bg-green-500"></div>
    </div>
    <!-- URL Bar -->
    <div class="flex-1 mx-4">
      <div class="bg-stone-800 rounded-md px-3 py-1.5 text-sm text-stone-400 flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span>my.accountmap.app</span>
      </div>
    </div>
  </div>
  <!-- Browser Content -->
  <div class="overflow-hidden">
    {typeof src === 'string' ? (
      <img
        src={src}
        alt={alt}
        class="w-full h-auto object-cover object-top"
        loading="eager"
      />
    ) : (
      <Image
        src={src}
        alt={alt}
        class="w-full h-auto object-cover object-top"
        loading="eager"
      />
    )}
  </div>
</div>
